<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#4a1ebd" android:endColor="#b6469a" android:angle="180" android:type="linear" android:gradientRadius="90" android:centerColor="#764194"/>
            <corners android:radius="@dimen/button_rounded_corner"/>
            <size android:height="20dp" android:width="20dp"/>
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_rounded_corner"/>
            <solid android:color="#fff"/>
        </shape>
    </item>
</layer-list>
