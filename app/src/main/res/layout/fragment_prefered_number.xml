<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/___16sdp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/fl_add_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.ucare.we.view.AppCompatTextView
                    android:id="@+id/preferedHeader"
                    style="@style/MyriadProRegularLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/here_s_your_prefered_numbers"
                    android:textAlignment="center"
                    android:textColor="@color/color_black_new"
                    android:textSize="@dimen/slider_text_medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_prefered_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:requiresFadingEdge="vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_add_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/___10sdp"
        android:layout_marginRight="@dimen/___10sdp"
        android:layout_marginBottom="@dimen/___10sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_add_new_number"
            style="@style/MyriadProSemiBold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/new_rounded_corner_button"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="@string/add_new_number"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lnrNotSubscribed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.ucare.we.view.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fnf_text_1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_large_new" />

        <com.ucare.we.view.AppCompatTextView
            android:id="@+id/txtHyperLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:autoLink="web"
            android:gravity="center"
            android:linksClickable="true"
            android:text="@string/fnf_text_2"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <com.ucare.we.view.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/fnf_text_3"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_large_new" />

        <com.ucare.we.view.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fnf_text_4"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_large_new" />

        <com.ucare.we.view.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_10"
            android:text="@string/fnf_text_5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large_new" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/indigo_icon" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="70"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="150"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="250"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="500"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/indigo_icon" />

                <com.ucare.we.view.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="@string/fees"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_large_new" />
            </FrameLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ten_le"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ten_le"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/free"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/free"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />

            <com.ucare.we.view.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/free"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_large_new" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@color/white" />
        </LinearLayout>

        <com.ucare.we.view.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:text="@string/fnf_text_6"
            android:textSize="@dimen/text_medium_new" />

        <com.ucare.we.view.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingStart="@dimen/margin_10"
            android:text="@string/fnf_text_7"
            android:textSize="@dimen/text_medium_new" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
