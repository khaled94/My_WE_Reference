            <LinearLayout android:gravity="right" android:layout_gravity="end" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_25">
                <com.ucare.we.view.AppCompatTextView android:textColor="@color/colorPrimary" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_regional_dismiss" android:background="@drawable/rounded_selected_primary" android:paddingLeft="@dimen/margin_15" android:paddingRight="@dimen/margin_15" android:layout_width="wrap_content" android:layout_height="35dp" android:layout_marginRight="@dimen/margin_20" android:text="Dismiss"/>
                <Button android:textSize="@dimen/dimen_12sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="end" android:id="@+id/btnRegionalAddons" android:background="@drawable/new_rounded_corner_button" android:paddingLeft="@dimen/margin_15" android:paddingRight="@dimen/margin_15" android:layout_width="wrap_content" android:layout_height="35dp" android:layout_marginRight="@dimen/margin_15" android:text="Regional Add-ons" android:textAllCaps="false" android:textAlignment="center"/>
            </LinearLayout>
            <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/colorPrimary" android:layout_gravity="start" android:id="@+id/txt_dontShow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_15" android:text="@string/don_t_show_again"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
