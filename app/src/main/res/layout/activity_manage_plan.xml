<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/color_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:background="@drawable/background_down_corner_white" android:layout_width="match_parent" android:layout_height="@dimen/single_line_header" app:contentInsetEnd="0dp" app:contentInsetLeft="0dp" app:contentInsetRight="0dp" app:contentInsetStart="0dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/imgBackButton" android:padding="@dimen/back_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/back_margin_start" android:layout_marginTop="@dimen/back_margin_top" android:layout_marginStart="@dimen/back_margin_start" android:layout_alignParentStart="true" app:srcCompat="@drawable/icon_back_arrow"/>
            <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_large" android:textColor="@color/black_light" android:gravity="center_horizontal" android:id="@+id/txtTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/title_margin_top" android:text="@string/manage_plan" android:layout_centerHorizontal="true" style="@style/QuickSandBold"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_renew_plan" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/button_left_margin" android:layout_marginRight="@dimen/button_left_margin">
            <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_medium" android:textColor="@color/black_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fab_margin" android:text="@string/main_plan" style="@style/MyriadProRegular"/>
            <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_medium" android:textColor="@color/black_light" android:id="@+id/tv_main_plan" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fab_margin" android:text=""/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fab_margin">
            <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2">
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/renewal_date" style="@style/QuickSandBold"/>
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:id="@+id/tv_renewal_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@style/QuickSandRegular"/>
            </LinearLayout>
            <View android:background="@color/gray" android:layout_width="2dp" android:layout_height="match_parent" android:layout_marginTop="5dp"/>
            <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.3">
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/remaining_days" style="@style/QuickSandBold"/>
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:id="@+id/tv_remaining_days" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0 Days" style="@style/QuickSandRegular"/>
            </LinearLayout>
            <View android:background="@color/gray" android:layout_width="2dp" android:layout_height="match_parent" android:layout_marginTop="5dp"/>
            <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cost" style="@style/QuickSandBold"/>
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:id="@+id/tv_cost" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@style/QuickSandRegular"/>
            </LinearLayout>
        </LinearLayout>
        <Button android:textColor="@color/white" android:id="@+id/btn_renew" android:background="@drawable/new_rounded_corner_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/button_left_margin" android:text="@string/renew" android:textAllCaps="false"/>
    </LinearLayout>
    <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/black_light" android:gravity="center_horizontal" android:id="@+id/tv_choose_plan" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/choose_plan_main_plan_empty" style="@style/MyriadProRegular"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_plans" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/button_left_margin" android:layout_marginRight="@dimen/button_left_margin"/>
</LinearLayout>
