            </LinearLayout>
            <com.ucare.we.view.AppCompatTextView android:textSize="12sp" android:textColor="@color/colorPrimary" android:layout_gravity="start" android:id="@+id/txt_dontShow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_15" android:text="@string/don_t_show_again"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
