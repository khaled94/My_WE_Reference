<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/lnrMigrate" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/text_large_new" android:textColor="@color/black_light" android:gravity="start" android:id="@+id/txtMainPlan" android:padding="@dimen/single_space_margin" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Plan 1" android:maxLines="2" android:layout_weight="2" android:textAlignment="viewStart" android:paddingEnd="@dimen/margin_10" style="@style/QuickSandBold"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/text_medium_new" android:textColor="@color/colorPrimary" android:gravity="start" android:id="@+id/tvPrice_lbl" android:padding="@dimen/single_space_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/price_lbl" android:paddingEnd="@dimen/margin_10" style="@style/QuickSandBold"/>
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/text_medium_new" android:textColor="@color/colorPrimary" android:gravity="start" android:id="@+id/tvPrice" android:padding="@dimen/single_space_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" " android:inputType="numberDecimal" android:paddingEnd="@dimen/margin_10" style="@style/QuickSandBold"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/mig" android:padding="@dimen/margin_10" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:srcCompat="@drawable/ic_add_24dp" style="@style/QuickSandBold"/>
    </LinearLayout>
    <View android:background="@color/gray" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
