            <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/accountCreated" style="@style/MyriadProRegular"/>
            <Button android:textColor="@color/registration_link_to_social_media_color" android:id="@+id/btnLinkToSocialMedia" android:background="@drawable/rounded_corner_button_with_border" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_15" android:text="@string/link_account_to_social_media" android:textAllCaps="false" android:layout_marginStart="@dimen/margin_30" android:layout_marginEnd="@dimen/margin_30"/>
            <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/text_size_15sp" android:layout_gravity="center" android:id="@+id/tvOr" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_10" android:text="@string/or" style="@style/MyriadProRegular"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/llRegistrationSuccessSecondPart" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
