                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/button_text_size" android:textColor="@color/registration_link_to_social_media_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/link_with_facebook" android:drawablePadding="@dimen/margin_10" android:textAllCaps="false" app:drawableStartCompat="@drawable/profile_link_facebook" style="@style/MyriadProBold"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/btnLinkToGoogle" android:background="@drawable/rounded_corner_button_with_border" android:padding="@dimen/button_padding" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_15" android:layout_marginStart="@dimen/margin_30" android:layout_marginEnd="@dimen/margin_30">
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/button_text_size" android:textColor="@color/registration_link_to_social_media_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/link_with_google" android:drawablePadding="@dimen/margin_10" android:textAllCaps="false" app:drawableStartCompat="@drawable/profile_link_google" style="@style/MyriadProBold"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/btnLinkToHuawei" android:background="@drawable/rounded_corner_button_with_border" android:padding="@dimen/button_padding" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_15" android:layout_marginBottom="@dimen/margin_15" android:layout_marginStart="@dimen/margin_30" android:layout_marginEnd="@dimen/margin_30">
                <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/button_text_size" android:textColor="@color/registration_link_to_social_media_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/link_to_huawei" android:drawablePadding="@dimen/margin_10" android:textAllCaps="false" app:drawableStartCompat="@drawable/ic_huaweiid" style="@style/MyriadProBold"/>
            </LinearLayout>
        </LinearLayout>
        <Button android:textColor="@color/white" android:id="@+id/btn_start" android:background="@drawable/new_rounded_corner_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_5" android:layout_marginBottom="@dimen/margin_5" android:text="@string/start" android:textAllCaps="false" android:layout_marginStart="@dimen/margin_30" android:layout_marginEnd="@dimen/margin_30"/>
    </LinearLayout>
</ScrollView>
