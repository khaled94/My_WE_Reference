<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/llManagePlan" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_renew_plan" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/button_left_margin" android:layout_marginRight="@dimen/button_left_margin">
            <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/text_large_new" android:textColor="@color/black_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fab_margin" android:text="@string/main_plan" style="@style/QuickSandBold"/>
            <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/text_large_new" android:textColor="@color/black_light" android:gravity="start|center_vertical" android:id="@+id/txtMainPlan" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fab_margin" android:text="" style="@style/QuickSandBold"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fab_margin">
                <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2">
                    <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/renewal_date" style="@style/QuickSandBold"/>
                    <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:id="@+id/txtRenewalDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@style/QuickSandRegular"/>
                </LinearLayout>
                <View android:background="@color/gray" android:layout_width="2dp" android:layout_height="match_parent" android:layout_marginTop="5dp"/>
                <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.3">
                    <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/remaining_days" style="@style/QuickSandBold"/>
                    <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:id="@+id/txtRemainingDays" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/QuickSandRegular"/>
                </LinearLayout>
                <View android:background="@color/gray" android:layout_width="2dp" android:layout_height="match_parent" android:layout_marginTop="5dp"/>
                <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cost" style="@style/QuickSandBold"/>
                        <com.ucare.we.view.AppCompatTextView android:textColor="@color/red" android:id="@+id/tvCostHint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="*" android:layout_marginStart="3dp" android:layout_marginEnd="3dp"/>
                    </LinearLayout>
                    <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:id="@+id/txtCost" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@style/QuickSandRegular"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_remaining_Locks" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_10" android:layout_marginStart="@dimen/margin_20" android:layout_marginEnd="@dimen/margin_10">
                <com.ucare.we.view.AppCompatTextView android:textSize="10sp" android:textColor="@color/red" android:id="@+id/tv_remainingLocks" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/remaining_locks" android:textAlignment="viewStart" style="@style/QuickSandRegular"/>
            </LinearLayout>
        </LinearLayout>
        <com.ucare.we.view.AppCompatTextView android:textColor="@color/red" android:layout_gravity="center_horizontal" android:id="@+id/tvExcludingVat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/button_left_margin" android:text="@string/price_excluding_taxes"/>
        <Button android:textSize="@dimen/text_large_new" android:textColor="@color/white" android:id="@+id/btnRenew" android:background="@drawable/new_rounded_corner_button" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/button_left_margin" android:text="@string/pay_bill" android:textAllCaps="false"/>
        <Button android:textSize="@dimen/text_large_new" android:textColor="@color/white" android:id="@+id/btnCreateGroup" android:background="@drawable/new_rounded_corner_button" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/button_left_margin" android:text="@string/create_group" android:textAllCaps="false" android:layout_marginStart="@dimen/button_left_margin" android:layout_marginEnd="@dimen/button_left_margin"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/llFilterSpin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/black_light" android:gravity="center" android:layout_gravity="start|center_vertical" android:id="@+id/tv_choose_plan" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/choose_plan_main_plan_empty" android:layout_weight="1" android:textAlignment="viewStart" android:layout_marginEnd="@dimen/margin_5" style="@style/QuickSandBold"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:orientation="horizontal" android:id="@+id/llSpin" android:background="@drawable/stroke_gray_border" android:visibility="visible" android:layout_width="145dp" android:layout_height="wrap_content" android:layout_marginStart="5dp">
            <com.ucare.we.manageplanspostpaid.CustomSpinner android:theme="@style/spinnerTheme" android:spinnerDropDownItemStyle="@style/spinnerTheme" android:entries="@array/regionalManagePlanSpinArray" android:id="@+id/spinFilter" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="30dp" android:dropDownSelector="@android:color/transparent" android:popupBackground="@drawable/drop_menu_background_color" android:layout_weight="0.3" android:dropDownWidth="145dp" android:dropDownVerticalOffset="33dp" android:spinnerMode="dropdown" android:layout_marginEnd="5dp" android:backgroundTint="@android:color/transparent" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/ivSpinnerArrow" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginEnd="10dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:srcCompat="@drawable/ic_drop_down"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout android:background="@color/gray" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/text_large_new" android:textColor="@color/black_light" android:gravity="left" android:id="@+id/tv_choosePlan" android:padding="@dimen/margin_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/vat_text" android:layout_marginStart="@dimen/margin_10" style="@style/MyriadProRegular"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvPlans" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginStart="@dimen/button_left_margin" android:layout_marginEnd="@dimen/button_left_margin"/>
</LinearLayout>
