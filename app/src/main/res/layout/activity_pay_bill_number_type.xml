                <View android:id="@+id/v_current_number" android:background="@color/gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/single_space_margin"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_my_numbers" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fab_margin">
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/single_space_margin" android:layout_marginRight="@dimen/single_space_margin" android:layout_weight="1">
                        <ImageView android:gravity="center_vertical" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/my_numbers"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5">
                        <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:gravity="center_vertical" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/my_numbers" android:layout_centerVertical="true" android:layout_alignParentStart="true" style="@style/MyriadProSemiBold"/>
                    </RelativeLayout>
                </LinearLayout>
                <View android:id="@+id/v_my_numbers" android:background="@color/gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/single_space_margin"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_other_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fab_margin">
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/single_space_margin" android:layout_marginRight="@dimen/single_space_margin" android:layout_weight="1">
                        <ImageView android:gravity="center_vertical" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/other_number"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5">
                        <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:gravity="center_vertical" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/other_number" android:layout_centerVertical="true" android:layout_alignParentStart="true" style="@style/MyriadProSemiBold"/>
                    </RelativeLayout>
                </LinearLayout>
                <View android:id="@+id/v_other_numbers" android:background="@color/gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/single_space_margin"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_pay_landlines_bill" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/fab_margin">
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/single_space_margin" android:layout_marginRight="@dimen/single_space_margin" android:layout_weight="1">
                        <ImageView android:gravity="center_vertical" android:layout_gravity="center" android:layout_width="25dp" android:layout_height="25dp" android:scaleType="fitXY" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_pay_landline_bill"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5">
                        <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:gravity="center_vertical" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pay_your_landlines_bill" android:layout_centerVertical="true" android:layout_alignParentStart="true" style="@style/MyriadProSemiBold"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
