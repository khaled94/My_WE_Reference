                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/single_space_margin" android:layout_marginRight="@dimen/single_space_margin" android:layout_weight="1">
                        <ImageView android:gravity="end" android:layout_gravity="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/current_number"/>
                    </RelativeLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5">
                        <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/current_number_text_size" android:textColor="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/current_number" style="@style/MyriadProSemiBold"/>
                        <com.ucare.we.view.AppCompatTextView android:textSize="@dimen/slider_text_small_new" android:textColor="@color/colorPrimary" android:id="@+id/current_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="01551357258" style="@style/MyriadProRegular"/>
                    </LinearLayout>
