<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f2_Eminence"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:padding="@dimen/margin_20">

    <com.skyfishjy.library.RippleBackground
        android:id="@+id/coach_mark_main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        app:rb_color="@color/white"
        app:rb_duration="3000"
        app:rb_radius="@dimen/margin_25"
        app:rb_rippleAmount="4"
        app:rb_scale="6"
        app:rb_type="strokeRipple">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_40"
            app:srcCompat="@drawable/ic_quick_start" />
    </com.skyfishjy.library.RippleBackground>

    <com.ucare.we.view.AppCompatTextView
        android:id="@+id/hint_message"
        style="@style/MontserratBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coach_mark_main_image"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/tap_here_to_get_more_details"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18sp" />

    <Button
        android:id="@+id/Got_it_btn"
        style="@style/MontserratBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hint_message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_25"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:background="@drawable/rounded_button_white_background"
        android:paddingStart="@dimen/margin_60dp"
        android:paddingLeft="@dimen/margin_60dp"
        android:paddingEnd="@dimen/margin_60dp"
        android:paddingRight="@dimen/margin_60dp"
        android:text="@string/Got_it"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_18sp" />
</RelativeLayout>
